<InlineLink
    IconPrefix="fas"
    Icon="location-arrow"
    Value="@(!IsPlaceHolder ? Text : null)"
    PlaceHolder="@(IsPlaceHolder ? Text : null)"
    OnClick="@(() => Modal.Show())"
    IsClickable="@IsEnabled"
/>

<Offcanvas @ref="Modal" Title="@DialogTitle" Direction="start" BodyCssClass="p-0" IsBodyRenderedLazily="true" style="--bs-offcanvas-width: 100%;">
    <ChildContent>
        @ChildContent
    </ChildContent>
</Offcanvas>