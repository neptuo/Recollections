@inherits UserStateComponentBase

<Modal @ref="Modal" Title="Select an Entry" CssClass="entry-picker" IsOverflow="true">
    <ChildContent>
        @if (wasVisible)
        {
            <Timeline OnClick="@(entry => { Hide(); Selected?.Invoke(entry); })" DataGetter="@(offset => Api.GetTimelineListAsync(offset))" ShowYearSeparators="false" />
        }
    </ChildContent>
</Modal>