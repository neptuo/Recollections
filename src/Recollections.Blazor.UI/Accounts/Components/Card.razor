<div class="login" data-bs-theme="light">
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-md-7 col-lg-5 col-xl-4 mx-auto my-auto">
                <div class="card shadow p-4">
                    <div class="card-body">
                        <div class="card-title">
                            <div class="d-flex flex-row align-items-center">
                                <img src="/img/icon-512x512.png" class="me-2" width="24" height="24" />
                                <h5 class="m-0">
                                    Recollections
                                    @if (!String.IsNullOrEmpty(Title))
                                    {
                                        @: - @Title
                                    }
                                </h5>
                            </div>
                        </div>
                        @ChildContent

                        <div class="d-grid">
                            <hr />
                            <a href="https://about.recollections.app" class="btn btn-light shadow-sm">Find more about Recollections</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}