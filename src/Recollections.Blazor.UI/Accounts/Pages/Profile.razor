@page "/users/{UserId}"
@layout Commons.Layouts.MainLayout

<DocumentTitle Value="@(Owner?.Name ?? UserId)" />

@if (Model != null)
{
    <CascadingValue Value="@Model">
        <PermissionContainer State="@Permissions">
            <div class="entry-detail">
                <h2 class="title">
                    <Icon Identifier="user" />
                    @Owner.Name
                </h2>

                <div class="datetime">
                    <Icon Identifier="calendar-day" />
                    @Model.RegistrationDate.ToString(UiOptions.DateFormat)
                </div>

                <ActionPanel CssClass="mt-3">
                    <PermissionView Request="@PermissionRequest.Owner">
                        <ShareButton ProfileId="@Owner.Id" />
                    </PermissionView>
                </ActionPanel>

                <ul class="nav nav-tabs mt-4">
                    <li class="nav-item">
                        <span class="nav-link active">Entries</span>
                    </li>
                </ul>

                <Neptuo.Recollections.Entries.Pages.Timeline AllowCreate="false" UserId="@UserId" />
            </div>
        </PermissionContainer>
    </CascadingValue>
}