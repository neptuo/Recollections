@inherits InlineEdit<string>

<div class="inline-editor @GetModeCssClass()">
    @if (IsEditMode)
    {
        <form @onsubmit="@OnSaveValueAsync">
            <div class="input-group">
                <input @ref="Input" type="text" class="form-control border-secondary-subtle" @bind="Value" style="box-shadow: unset !important;" />
                <button class="btn border-secondary-subtle border-start-0 border-end-0 text-success btn-save" title="Save changes">
                    <Icon Identifier="check" />
                </button>
                <button class="btn border-secondary-subtle border-start-0 text-danger btn-cancel" @onclick="@OnResetAsync" title="Revert changes">
                    <Icon Identifier="times" />
                </button>
            </div>
        </form>
    }
    else
    {
        var isEmpty = String.IsNullOrEmpty(Value);
        <a class="inline-editor-value d-inline-block py-1 @(isEmpty ? "text-muted" : "")" @onclick="@OnEditAsync">
            <span class="inline-editor-content">
                @if (isEmpty)
                {
                    @(PlaceHolder ?? "No value...")
                }
                else
                {
                    @Value
                }
            </span>
        </a>
    }
</div>
