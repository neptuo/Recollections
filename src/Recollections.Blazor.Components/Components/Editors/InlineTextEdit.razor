@inherits InlineEdit<string>

<div class="inline-editor @GetModeCssClass()">
    @if (IsEditMode)
    {
        <form @onsubmit="@OnSaveValueAsync">
            <div class="input-group">
                <input @ref="Input" type="text" class="form-control" @bind="Value" />
                <button class="btn btn-outline-success btn-save" title="Save changes">
                    <Icon Identifier="check" />
                </button>
                <button class="btn btn-outline-danger btn-cancel" @onclick="@OnResetAsync" title="Revert changes">
                    <Icon Identifier="times" />
                </button>
            </div>
        </form>
    }
    else
    {
        <a class="inline-editor-value" @onclick="@OnEditAsync">
            <Icon Identifier="pen" />

            @if (String.IsNullOrEmpty(Value))
            {
                <span class="inline-editor-content value-placeholder">@(PlaceHolder ?? "No value...")</span>
            }
            else
            {
                <span class="inline-editor-content">@Value</span>
            }
        </a>
    }
</div>
