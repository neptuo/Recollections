{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Api build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "./src/Recollections.Api"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "statusbar": {
                    "label": "api:build"
                }
            }
        },
        {
            "label": "Blazor build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "./src/Recollections.Blazor.UI"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "statusbar": {
                    "label": "blazor:build"
                }
            }
        },
        {
            "label": "Compile SCSS",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "./src/WatchScss.proj",
                "-p:RootPath=./src/Recollections.Blazor.UI"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "statusbar": {
                    "label": "blazor:scss"
                }
            }
        },
        {
            "label": "Blazor watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "build",
            ],
            "options": {
                "cwd": "./src/Recollections.Blazor.UI"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "msbuild",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^\\s+(error|warning|info)\\s+CS(\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "dotnet\\ watch\\ ⌚\\ Started",
                    "endsPattern": "dotnet\\ watch\\ ⏳\\ Waiting\\ for\\ a\\ file\\ to\\ change\\ before\\ restarting\\ dotnet\\.\\.\\."
                }
            },
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        }
    ]
}